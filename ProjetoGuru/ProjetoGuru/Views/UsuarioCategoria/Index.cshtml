@model IEnumerable<ProjetoGuru.Models.UsuarioCategoria>

@{
    ViewBag.Title = "Categorias Vinculadas";
}

<h2>Categorias Vinculadas</h2>

<p>
    @Html.ActionLink("Vincular Categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            E-Mail
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UsuarioCategoriaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.UsuarioCategoriaID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.UsuarioCategoriaID })
        </td>
    </tr>
}

</table>
