@model ProjetoGuru.Models.Resposta

@{
    ViewBag.Title = "Responder Pergunta";
}
<h2>Respondendo Pergunta</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Hidden("PerguntaID", ViewData["id"])
        @Html.Hidden("UsuarioID", Session["usuarioID"])
       
        <div class="form-group">
            @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
                @Request.
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Avaliacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Avaliacao)
                    @Html.ValidationMessageFor(model => model.Avaliacao, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Responder" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    <br />
    @Html.ActionLink("Voltar para Perguntas", "../Pergunta/Index/")
</div>
