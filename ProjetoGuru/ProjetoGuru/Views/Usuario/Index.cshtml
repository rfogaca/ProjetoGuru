@model IEnumerable<ProjetoGuru.Models.Usuario>

@{
    ViewBag.Title = "Lista de Usuários";
}

<h2>Lista de Usuários</h2>

<p>
    @Html.ActionLink("Novo Usuário", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tipo
        </th>
        <th>
            E-mail
        </th>
        <th>
            Nome
        </th>
        <th>
            Imagem
        </th>
        <th>
            Senha
        </th>
        <th>
            Data de Nascimento
        </th>
        <th>
            Paypal
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UsuarioTipo.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaypalToken)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UsuarioID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.UsuarioID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.UsuarioID })
        </td>
    </tr>
}

</table>
